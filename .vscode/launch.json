{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "${workspaceFolder}/backend/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": ["run"],
      "jinja": true
    },
    {
      "name": "Frontend",
      "cwd": "${workspaceFolder}/frontend",
      "type": "reactnative",
      "request": "launch",
      "platform": "android"
    }
  ],
  "compounds": [
    {
      "name": "Frontend + Backend",
      "configurations": ["Backend", "Frontend"]
    }
  ]
}
